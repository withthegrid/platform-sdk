{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "esm",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
